<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Renova'Meuble{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href={{ asset('css/bootstrap.css')}} />
            <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
            {{ encore_entry_link_tags('app') }} 
            <link rel="stylesheet" href="/build/app.css">
            <link rel="stylesheet" href="/style/style.css">
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script type="application/javascript" src="//cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
            {{ encore_entry_script_tags('app') }} 
            <script src="/build/runtime.js" defer></script>
            <script src="/build/app.js" defer></script>
        {% endblock %}

    </head>
    <body>
        <div class="container">
            <!-- HEADER et bannière -->
                <nav class="navbar sticky-top navbar-dark bg-dark navbar-expand-lg">
                     <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('home') }}>
                                <img src="/images/icône accueil.png" width="20%" alt="accueil">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('list_category') }} >Catégories des meubles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href={{ path('list_meuble') }} >Liste des meubles</a>
                        </li>
                        
                        <li class="nav-item">
                            {% if is_granted("ROLE_USER") %}
                            <a class="nav-link" href={{ path('get_cart')}}>Panier</a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if is_granted("ROLE_ADMIN") %}
                                <a class="nav-link" href={{ path('register_admin') }} >Nouveau compte admin</a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            {% if is_granted("ROLE_USER") %}
                                <a class="nav-link" href={{ path('app_logout') }} >Déconnexion</a>
                            {% else %}
                                <a class="nav-link" href={{ path('app_login') }} >Connexion</a>
                            {% endif %}
                        </li>
                    </ul>
                    <h1>Bienvenue sur Renova'Meuble</h1>
                    <div class="ban">
                    <img src="/images/logo.png" width="100%" height="1%" alt="logo">
                    </div>
                </nav>

        {% block body %}{% endblock %}

            <!-- FOOTER et liens -->
        <footer>
            <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('home') }}>Nous suivre          
                            <img src="/images/fb.png" width="25%" alt="logo_facebook">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('home') }}> 
                            <img src="/images/ins.png" width="20%" alt="logo_instagram">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('home') }}> 
                            <img src="/images/tw.png" width="30%" alt="logo_twitter">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">© Tous droits réservés - Edition juin 2021.</a>
                    </li>
                </ul>
            </nav>
        </footer>
        </div>
    </body>
</html>
